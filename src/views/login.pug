extends base.pug

block content
  if errorMessage
    span=errorMessage
  form(method="POST").login_form
    input(name="id" type="text" placeholder="ID" required)
    input(name="password" type="password" placeholder="Password" required)
    input(type="submit" value="Login")
    br
    include partials/social-login
  div.auth_switch
    span Don't hava an account? 
    a(href="/join") Join Now &rarr;