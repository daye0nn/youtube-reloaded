extends base.pug

block content 
  h4 Change Title of Video 
  form(method="POST")
    input(name="title" type="text" placeholder="Video Title" value=video.title maxlength=80 required)
    input(name="description" type="text" placeholder="Description" video=video.description minlength=20 required)
    input(name="hashtags" type="text" placeholder="Hashtags,  Separated by Comma" value=video.hashtags.join() required)
    input(type="submit" value="Save Video")
